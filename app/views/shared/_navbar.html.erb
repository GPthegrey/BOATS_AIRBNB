<div class="navbar shadow navbar-expand-sm navbar-light navbar-lewagon">
  <div class="d-flex justify-content-between px-3 w-100">

    <div class="d-flex align-items-center">
      <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "barquito.png", class: "" %>
        <h3 class="ms-3 mt-3 d-none d-md-inline">KOOLBOATS</h3>
      <% end %>
    </div>

      <form class="form-inline d-flex justify-content-left" action="/search" method="get">
        <div class="input-group">
          <input type="text" class="form-control mr-sm-2 rounded" name="search" placeholder="Search" aria-label="Search" required>
          <div class="input-group-append">
            <button type="submit" class="btn border-0 mt-1" title="Search">
              <i class="fas fa-search fs-5"></i>
            </button>
          </div>
        </div>
      </form>

      <ul class="navbar-nav me-auto">
          <li class="nav-item d-none d-md-block">
            <%= link_to "Own a boat? Make $$$", "/boats/new", class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if user_signed_in? %>
                <%= link_to "My rentals", "/rentals", class: "dropdown-item" %>
                <%= link_to "My boats", "/myboats", class: "dropdown-item" %>
                <%= link_to "Log out", "/users/sign_out", class: "dropdown-item", data: {turbo_method: :delete} %>
              <% else %>
                <%= link_to "Log in", "/users/sign_in", class: "dropdown-item" %>
                <%= link_to "Sign up", "/users/sign_up", class: "dropdown-item" %>
             <% end %>
            </div>
          </li>
      </ul>
  </div>
</div>
