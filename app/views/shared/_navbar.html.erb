<div class="navbar shadow navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <div class="d-flex align-items-center">
      <%= link_to "/", class: "navbar-brand" do %>
        <%= image_tag "barquito.png", class: "" %>
        <h3 class="ms-3 mb-0 d-inline">KOOLBOATS</h3>
      <% end %>
    </div>

      <form class="form-inline d-flex justify-content-left" action="/search" method="get">
        <div class="input-group">
          <input type="text" class="form-control mr-sm-2 rounded" name="search" placeholder="Search" aria-label="Search" required>
          <div class="input-group-append">
            <button type="submit" class="btn btn-book ms-1" title="Search">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Own a boat? Make $$$", "/boats/new", class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <% if user_signed_in? %>
                <%= link_to "My rentals", "/rentals", class: "dropdown-item" %>
                <%= link_to "My boats", "/myboats", class: "dropdown-item" %>
                <%= link_to "Log out", "users/sign_out", class: "dropdown-item", data: {turbo_method: :delete} %>
              <% else %>
                <%= link_to "Sign-in", "http://localhost:3000/users/sign_in", class: "dropdown-item" %>
                <%= link_to "Sign-up", "/users/sign_up", class: "dropdown-item" %>
             <% end %>
            </div>
          </li>
      </ul>
    </div>
  </div>
</div>
