

<h1>Welcome to Boat Rentals!</h1>


<h2>Available Boats</h2>
<% @boats.each do |boat| %>
  <div class="boat">
    <h3><%= boat.name %></h3>
    <% boat.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <p>Description: <%= boat.description %></p>
    <p>Price per hour: <%= number_to_currency(boat.price) %></p>
    <% if user_signed_in? %>
      <%= link_to "Rent this boat", boat_path(boat), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Sign in to rent this boat", new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
