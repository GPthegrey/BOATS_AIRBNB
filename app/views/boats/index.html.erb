

<h1>Welcome to Boat Rentals!</h1>

<h2>Available Boats</h2>

<div class="container">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
    <% @boats.each do |boat| %>
      <div class="col">
        <div class="boat">
          <div class="card rounded-4 shadow" style="width: 100%;">
            <% boat.photos.each do |photo| %>
              <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= boat.name %></h5>
              <h3><%= number_to_currency(boat.price) %></h3>
              <p class="card-text" style="max-height: 80px; overflow: hidden;"><%= boat.description %>.</p>
              <%= link_to "Rent this boat", boat_path(boat), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
