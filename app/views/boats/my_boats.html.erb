

<h1>My Boats</h1>

<% if @my_boats.present? %>
  <ul>
    <% @my_boats.each do |boat| %>
      <li>
        <strong><%= boat.name %></strong>
        <div>
          <% boat.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
        </div>
        <p><strong>Price:</strong> <%= boat.price %></p>
        <p><strong>Description:</strong> <%= boat.description %></p>
        <div class="links d-flex justify-content-around">
          <%= link_to 'Edit', edit_boat_path(boat), class: "btn btn-outline-primary btn-sm" %>
          <%= button_to 'Suspend', boat_path(boat), method: :patch, params: { boat: { available: false } }, class: "btn btn-outline-warning btn-sm" %>
          <%= link_to "Delete", delete_my_boat_path(boat), class: "btn btn-outline-danger rounded shadow", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
        </div>
      </li>
    <% end %>
  </ul>
  <% else %>
  <p>You have no boats</p>

<% end %>

  <%= link_to 'Back to home', root_path, class: 'btn btn-outline-success' %>
