<%= simple_form_for(@boat) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :address %>
  <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.input :available_from,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
      </div>
      <div class="form-group col-md-6">
        <%= f.input :available_until,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
      </div>
    </div>
  <%= f.input :photos, as: :file, input_html: { multiple: true }, label: @boat.photos.empty? ? 'Photos' : "Current: #{@boat.photos.map{ |p| p.filename.to_s }.join(', ')}"  %>
  <%= f.button :submit, @boat.persisted? ? "Update Boat" : "Create boat" %>
<% end %>
