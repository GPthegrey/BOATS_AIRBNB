<% past_rentals = @my_rentals.select { |rental| rental.end_time < Date.today } %>
<% current_rentals = @my_rentals.select { |rental| rental.end_time >= Date.today } %>
<div class='d-flex justify-content-between mb-4'>
  <h1>My Rentals</h1>
  <div><%= link_to 'Book another Boat!', root_path, class: 'btn btn-outline-success' %></div>
</div>


<% if current_rentals.present? %>
  <ul>
    <% current_rentals.each do |rental| %>
    <div class="col m-3">
      <div class="card h-100">
        <div class="card-body">
          <div class='text-end'><p><strong>Booking number: </strong><%= rental.id %></p></div>
           <% if rental.boat.photos.attached? %>
            <div><%= cl_image_tag rental.boat.photos.first.key, height: 100, width: 100, crop: :fill %></div>
          <% end %>
          <h5 class="card-title"><%= rental.boat.name %></h5>
          <p class="card-text"><strong>Price:</strong> <%= rental.boat.price %></p>
          <p class="card-text"><strong>Reservation Dates:</strong> <%= rental.start_time.strftime("%Y-%m-%d") %> to <%= rental.end_time.strftime("%Y-%m-%d") %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Cancel rental', rentals_path, class: "btn btn-danger btn-sm text-white", turbo_method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to 'Edit rental', boat_path(rental.boat), class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
</div>

<% past_rentals = @my_rentals.select { |rental| rental.end_time < Date.today } %>

<% if past_rentals.present? %>
  <div class="container mt-5">
    <h1>Rental History</h1>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% past_rentals.each do |rental| %>
        <div class="col">
          <div class="card h-100">
              <div class='text-end bold'><p><strong>Booking number: </strong><%= rental.id %></p></div>
            <div class="card-body d-flex">
              <% if rental.boat.photos.attached? %>
                <div><%= cl_image_tag rental.boat.photos.first.key, height: 100, width: 100, crop: :fill %></div>
              <% end %>
              <div class='mx-5'>
                <h5 class="card-title"><%= rental.boat.name %></h5>
                <p class="card-text"><strong>Price:</strong> <%= rental.boat.price %></p>
                <p class="card-text"><strong>Reservation Dates:</strong> <%= rental.start_time.strftime("%Y-%m-%d") %> to <%= rental.end_time.strftime("%Y-%m-%d") %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to 'Back to home', root_path, class: 'btn btn-outline-success mt-3' %>
  </div>
<% end %>

<% if !@my_rentals.present? %>
 <div class="container mt-5">
    <p>No boats booked...yet!</p>
    <%= link_to 'Find the perfect Boat for you!', root_path, class: 'btn btn-outline-success' %>
  </div>
<% end %>
